<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Learn.Surface" parent="Base.Theme.Learn">
        <item name="appBarLayoutStyle">@style/Widget.Learn.AppBarLayout.Surface</item>
        <item name="toolbarStyle">@style/Widget.Learn.TopAppBar.OnSurface</item>
        <item name="toolbarNavigationButtonStyle">@style/Widget.Learn.TopAppBar.Navigation.Surface
        </item>
        <item name="android:statusBarColor">#22000000</item>
    </style>

    <style name="Theme.Learn.Primary" parent="Base.Theme.Learn">
        <item name="appBarLayoutStyle">@style/Widget.Learn.AppBarLayout.Primary</item>
        <item name="collapsingToolbarLayoutStyle">
            @style/Widget.Learn.CollapsingToolbar.Primary
        </item>
        <item name="collapsingToolbarLayoutMediumStyle">
            @style/Widget.Learn.CollapsingToolbar.Primary
        </item>
        <item name="collapsingToolbarLayoutLargeStyle">
            @style/Widget.Learn.CollapsingToolbar.Primary
        </item>
        <item name="toolbarStyle">@style/Widget.Learn.TopAppBar.OnPrimary</item>
        <item name="toolbarNavigationButtonStyle">@style/Widget.Learn.TopAppBar.Navigation.Primary
        </item>
    </style>

    <style name="Theme.Learn.primarySurface" parent="Theme.Learn.Primary" />

    <style name="Base.Theme.Learn" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="actionBarSize">@dimen/learn_action_bar_size</item>
        <item name="android:actionBarSize">@dimen/learn_action_bar_size</item>
        <item name="android:colorBackground">?colorSurface</item>
        <item name="windowActionModeOverlay">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:configChanges">orientation|keyboardHidden|screenSize</item>
        <item name="android:windowAnimationStyle">@style/LearnWindowAnimation</item>
        <item name="materialDividerHeavyStyle">@style/Widget.Learn.MaterialDivider.Heavy</item>
        <item name="snackbarStyle">@style/Widget.Learn.Snackbar</item>
        <item name="materialAlertDialogTheme">
            @style/ThemeOverlay.Material3.MaterialAlertDialog.Centered.FullWidthButtons
        </item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges
        </item>
    </style>

    <style name="LearnWindowAnimation" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
        <item name="android:activityOpenEnterAnimation">@anim/shared_axis_y_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/nothing</item>
        <item name="android:activityCloseExitAnimation">@anim/shared_axis_y_close_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/nothing</item>
    </style>

    <style name="Widget.Learn.MaterialDivider.Heavy" parent="Widget.Material3.MaterialDivider.Heavy">
        <item name="dividerThickness">@dimen/dividerHeavy</item>
    </style>

    <style name="Widget.Learn.Snackbar" parent="Base.Widget.Material3.Snackbar">
        <item name="animationMode">fade</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginBottom">@dimen/contentLarge</item>
        <item name="android:layout_marginEnd">@dimen/contentSmall</item>
        <item name="android:layout_marginStart">@dimen/contentSmall</item>
        <item name="android:layout_marginTop">@dimen/contentSmall</item>
        <item name="shapeAppearance">?attr/shapeAppearanceCornerExtraSmall</item>
    </style>

    <style name="Widget.Material3.PopupMenu.OverlapAnchor" parent="Widget.Material3.PopupMenu">
        <item name="overlapAnchor">true</item>
    </style>

</resources>