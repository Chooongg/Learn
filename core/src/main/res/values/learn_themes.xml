<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Learn.Surface" parent="Base.Theme.Learn">
        <item name="appBarLayoutStyle">@style/Widget.Learn.AppBarLayout.Surface</item>
        <item name="toolbarStyle">@style/Widget.Learn.TopAppBar.OnSurface</item>
        <item name="android:statusBarColor">#11000000</item>
    </style>

    <style name="Theme.Learn.Primary" parent="Base.Theme.Learn">
        <item name="actionBarSize">@dimen/d48</item>
        <item name="appBarLayoutStyle">@style/Widget.Learn.AppBarLayout.Primary</item>
        <item name="collapsingToolbarLayoutStyle">
            @style/Widget.Learn.CollapsingToolbar.Primary
        </item>
        <item name="collapsingToolbarLayoutMediumStyle">
            @style/Widget.Learn.CollapsingToolbar.Primary
        </item>
        <item name="collapsingToolbarLayoutLargeStyle">
            @style/Widget.Learn.CollapsingToolbar.Primary
        </item>
        <item name="toolbarStyle">@style/Widget.Learn.TopAppBar.OnPrimary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Learn.primarySurface" parent="Theme.Learn.Primary" />

    <style name="Base.Theme.Learn" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:configChanges">orientation|keyboardHidden|screenSize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="toolbarNavigationButtonStyle">@style/Widget.Learn.Button.Navigation</item>
    </style>

</resources>