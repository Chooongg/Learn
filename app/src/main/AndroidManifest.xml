<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.chooongg.learn">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="31">

        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.INFO" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask" />


        <activity
            android:name=".echarts.EChartsActivity"
            android:label="ECharts"
            android:launchMode="singleTop" />


        <activity
            android:name=".eventFlow.EventFlowActivity"
            android:label="EventFlow"
            android:launchMode="singleTop" />
        <activity
            android:name=".eventFlow.EventFlowSecondActivity"
            android:label="EventFlowSecond"
            android:launchMode="singleTop" />


        <activity
            android:name=".loading.LoadingActivity"
            android:label="Loading"
            android:launchMode="singleTop" />


        <activity
            android:name=".stateLayout.StateLayoutActivity"
            android:label="StateLayout"
            android:launchMode="singleTop" />


        <activity
            android:name=".topAppBar.TopAppBarActivity"
            android:label="TopAppBar"
            android:launchMode="singleTop" />
        <activity
            android:name=".topAppBar.TopAppBarLayoutActivity"
            android:label="TopAppBarLayout"
            android:launchMode="singleTop" />

        <activity
            android:name=".network.NetworkActivity"
            android:label="Network"
            android:launchMode="singleTop" />

    </application>

</manifest>